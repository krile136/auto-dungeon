{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true, // これ入れると import { PersistGate } from 'redux-persist/integration/react'; とかで警告出なくなる
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["types", "node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
